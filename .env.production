# Production Environment Configuration
# Abraham University ReactJS Website

# Application Settings
NODE_ENV=production
PORT=10000
HOST=localhost

# API Configuration
VITE_API_BASE_URL=https://abrahamuniversity.us/wp-json/wp/v2
VITE_WP_API_URL=https://abrahamuniversity.us/wp-json

# WordPress Integration
VITE_WP_SITE_URL=https://abrahamuniversity.us
VITE_WP_REST_API_NAMESPACE=wp/v2

# Security Settings
VITE_ENABLE_HTTPS=true
VITE_SECURE_COOKIES=true

# Performance Settings
VITE_ENABLE_COMPRESSION=true
VITE_ENABLE_CACHING=true

# Analytics (uncomment and configure as needed)
# VITE_GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
# VITE_GOOGLE_TAG_MANAGER_ID=GTM_CONTAINER_ID

# Social Media (configure as needed)
# VITE_FACEBOOK_APP_ID=your_facebook_app_id
# VITE_TWITTER_HANDLE=@abraham_university

# Contact Information
VITE_CONTACT_EMAIL=info@abrahamuniversity.us
VITE_CONTACT_PHONE=+1-555-0123

# Build Settings
VITE_BUILD_TIMESTAMP=__BUILD_TIMESTAMP__
VITE_BUILD_VERSION=__BUILD_VERSION__